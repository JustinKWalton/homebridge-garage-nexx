{
  "pluginAlias": "HomebridgeGarageNexx",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Nexx Garage"
      },
      "auth": {
        "description": "See https://github.com/tget4/nexx-garage-sdk/blob/master/src/NexxApiClient.ts#L7",
        "title": "Authentication",
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "clientId": {
            "type": "string"
          },
          "deviceToken": {
            "type": "string"
          },
          "grantType": {
            "type": "string"
          },
          "userAgent": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password",
          "clientId"
        ]
      }
    }
  }
}
