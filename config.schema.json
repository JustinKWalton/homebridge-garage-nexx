{
  "pluginAlias": "HomebridgeGarageNexx",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Nexx Garage"
      },
      "auth": {
        "description": "See https://github.com/tget4/nexx-garage-sdk/blob/master/src/NexxApiClient.ts#L7",
        "title": "Authentication",
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "clientId": {
            "type": "string"
          },
          "deviceToken": {
            "type": "string"
          },
          "grantType": {
            "type": "string"
          },
          "userAgent": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password",
          "clientId"
        ]
      },
      "options": {
        "title": "Options",
        "type": "object",
        "properties": {
          "includeGate": {
            "title": "Include NexxGate (NXGT1)",
            "type": "boolean",
            "default": true,
            "description": "Allow devices with DeviceType=NexxGate / ProductCode=NXGT1 to be registered."
          },
          "treatGateAsGarage": {
            "title": "Treat Gate As Garage",
            "type": "boolean",
            "default": true,
            "description": "Expose gates as Garage Door in HomeKit for Siri/CarPlay compatibility."
          },
          "deviceId": {
            "title": "Device ID (optional)",
            "type": "string",
            "description": "If set, only register this device (e.g., b7c3059492894f31ad5ad9b818419e17)."
          }
        }
      }
    }
  }
}
